BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Clear'
            size_hint_x: 0.3
        # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_clear_data()
    # Change button 2 to TextInput to allow user to type
        TextInput:
            id: input_name
            text: ''
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Greet'
            size_hint_x: 0.3
            # The following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_greet()
        Label:
            text: 'Enter your name'
            color: (1, 1, 0, 1)
            # Add id to the Label
            id: output_label